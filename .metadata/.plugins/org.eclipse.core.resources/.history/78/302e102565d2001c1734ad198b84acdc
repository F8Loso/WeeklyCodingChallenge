import java.util.Scanner;
import java.util.Set;

public class MagicIndex {

	int magicIndexMethod(int array[]) {
		for (int i = 0; i < array.length; i++) {
			if (array[i] == i) {
				return i;
			}
		}
    System.out.println("Here's your magic index" + magicIndexMethod(array) );
	return -1;
    
	}
